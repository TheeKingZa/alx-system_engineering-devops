#!/usr/bin/env bash
# This script displays information about subdomains based on DNS records.

# Function to get DNS information
get_dns_info() {
    local domain="$1"
    local subdomain="$2"
    local record_type="$3"
    
    # Use dig to get DNS information and awk to extract relevant details
    local result
    result=$(dig "$subdomain.$domain" | awk '/ANSWER SECTION:/ { getline; print $4 }')

    # Display the information
    echo "The subdomain $subdomain is a $record_type record and points to $result"
}

# Check the number of arguments
if [ "$#" -eq 1 ]; then
    # Display information for default subdomains
    get_dns_info "$1" "www" "A"
    get_dns_info "$1" "lb-01" "A"
    get_dns_info "$1" "web-01" "A"
    get_dns_info "$1" "web-02" "A"
elif [ "$#" -eq 2 ]; then
    # Display information for the specified subdomain
    get_dns_info "$1" "$2" "A"
else
    # Display usage information if the number of arguments is incorrect
    echo "Usage: $0 <domain> [subdomain]"
fi
