
# Update the package repository
sudo apt-get -y update

# Install the Nginx web server
sudo apt-get -y install nginx

# Create a string containing the Nginx configuration line to add a custom header
str="\\\tadd_header X-Served-By $HOSTNAME;"

# Use sed to insert the custom header configuration line into the default Nginx configuration file
# The configuration is inserted at line 36 in this case
sudo sed -i "36i $str" /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
sudo service nginx restart
